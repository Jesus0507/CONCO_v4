<?xml version="1.0" encoding="utf-8"?>
<phpunit bootstrap="vendor/autoload.php" colors="true" converterrorstoexceptions="true" convertnoticestoexceptions="true" convertwarningstoexceptions="true" stoponfailure="false" verbose="true" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:nonamespaceschemalocation="https://schema.phpunit.de/9.3/phpunit.xsd">
    <testsuites>
        <testsuite name="Reportes">
            <file>
                tests/reportes_test.php
            </file>
        </testsuite>
    </testsuites>
    <!-- Filtra los archivos de prueba en la carpeta "tests" con extensiÃ³n "_test.php" -->
    <filter>
        <whitelist>
            <directory suffix="_test.php">
                tests/
            </directory>
        </whitelist>
    </filter>
    <logging>
        <!-- Generar un informe de pruebas en formato JUnit (resultado estructurado) -->
        <junit outputfile="tests/resultados/reportes/reportes-lista-resultados.xml">
        </junit>
        <!-- Guardar los resultados de las pruebas en un archivo de texto -->
        <testdoxtext outputfile="tests/resultados/reportes/reportes-lista-resultados.txt">
        </testdoxtext>
    </logging>
</phpunit>
